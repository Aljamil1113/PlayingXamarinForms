<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  xmlns:local="clr-namespace:PlayWithXamarinForms"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayWithXamarinForms.SampleTabbed">
    <local:Lists Title="Contacts" IconImageSource="icon.png"></local:Lists>

    <NavigationPage Title="Page 1" IconImageSource="icon.png">
        <x:Arguments>
            <local:Welcome />
        </x:Arguments>
                 
    </NavigationPage>
    <ContentPage Title="Page 1" IconImageSource="icon.png">
        <Label Text="Content of Page 2" HorizontalOptions="Center" VerticalOptions="Center"></Label>
    </ContentPage>
</TabbedPage>